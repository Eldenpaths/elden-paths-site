{
  "tool_name": "terrain_to_mesh_baker",
  "description": "Converts voxel data into 3D terrain mesh assets.",
  "input": {
    "voxel_map": "/data/tiles/micro_voxel/{tile_id}.json",
    "resolution_range": [
      "10x10",
      "100x100"
    ],
    "elevation_channel": "terrain_base"
  },
  "output": {
    "format": "OBJ",
    "destination_folder": "/export/meshes/tiles/",
    "material_style": "stylized_blend"
  },
  "settings": {
    "smooth_edges": true,
    "merge_adjacent_tiles": false,
    "apply_vertex_color_from_biome": true
  },
  "future_ready": {
    "collider_export": true,
    "navmesh_hook": true
  }
}