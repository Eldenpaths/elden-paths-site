{
  "engine_name": "Inkhern Protocol - Self-Building Engine",
  "version": "1.0",
  "description": "Defines how gameplay elements trigger permanent world assets for the full 3D build.",
  "rules": {
    "sketch_to_model": true,
    "npc_triggered_export": true,
    "player_trail_logging": true,
    "tile_auto_queue_on_explore": true,
    "object_autogen_from_prompt": true,
    "memory_influences_geometry": true
  },
  "optimization": {
    "prioritize_light_runtime": true,
    "defer_heavy modeling to offline AI": true,
    "sketch prompts are cached and queued": true
  },
  "paths": {
    "builder_cache": "/builder_cache/",
    "sketch_log": "/logs/sketch_prompts.json",
    "creature_log": "/logs/autogen_creatures.json",
    "structure_log": "/logs/structure_memory.json",
    "npc_log": "/logs/npc_export_triggers.json"
  }
}